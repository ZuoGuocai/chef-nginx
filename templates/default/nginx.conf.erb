user                  nginx;
worker_processes      <%= node[:nginx][:workers] %>; 

error_log             /var/log/nginx/error.log warn;
pid                   /var/run/nginx.pid;

events {
  worker_connections  <%= node[:nginx][:worker_conns] %>;
}


http {
  include             /etc/nginx/mime.types;
  default_type        application/octet-stream;

  log_format main     '$remote_addr - $remote_user [$time_local] "$request" '
                      '$status $body_bytes_sent "$http_referer" '
                      '"$http_user_agent" "$http_x_forwarded_for"';

  access_log          /var/log/nginx/access.log  main;

  sendfile            on;

  keepalive_timeout   65;

  gzip                <%= node[:nginx][:gzip] %>;

  # Modules/plugins/etc configs
  include             /etc/nginx/conf.d/*.conf;
  # Vhosts
  include             /etc/nginx/vhosts.d/*.conf;
  <% if node[:nginx][:modsecurity][:crs][:enable] == true %>
  # modsecurity - CRS - https://github.com/SpiderLabs/owasp-modsecurity-crs
  #include             /etc/nginx/modsecurity.d/modsecurity_crs_10_setup.conf;
  <% end %>
}
